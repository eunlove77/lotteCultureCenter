    <Layouts>
      <Layout height="800" width="180">
        <Grid id="LeftMenuGrid" taborder="0" left="0" top="0" width="180" height="800" binddataset="ds_left_menu" treeusecheckbox="false" treeinitstatus="expand,all" oncellclick="LeftMenuGrid_oncellclick" border="0px none" treeuseline="false" treeuseimage="false" cssclass="grd_LF_TreeMenu" autosizingtype="row" extendsizetype="row">
          <Formats>
            <Format id="default">
              <Columns>
                <Column size="180"/>
              </Columns>
              <Rows>
                <Row size="50" band="head"/>
                <Row size="24"/>
              </Rows>
              <Band id="head">
                <Cell cssclass="menu_header" textAlign="left" font="18px/normal &quot;Noto Sans KR&quot;"/>
              </Band>
              <Band id="body">
                <Cell text="bind:menuNm" displaytype="treeitemcontrol" edittype="tree" treelevel="bind:dpth" border="1px solid #dbdee2" wordWrap="char" treestartlevel="3"/>
              </Band>
            </Format>
          </Formats>
        </Grid>
